<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="L00177804_Project.View.VehicleView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:DataType="viewmodel:VehicleViewModel"
    xmlns:model="clr-namespace:L00177804_Project.Models"
    xmlns:viewmodel="clr-namespace:L00177804_Project.ViewModel"
    Title="Vehicles">
    <ScrollView>
        <!--  *,* makes coloumns as big as needed  -->
        <Grid>
            <StackLayout>
                <StackLayout
                    Margin="0,0,0,20"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="End">
                    <Button
                        BackgroundColor="Black"
                        Command="{Binding GoToAddVehicleCommand}"
                        Text="Add Vehicle"
                        WidthRequest="200" />
                </StackLayout>

                <ActivityIndicator HorizontalOptions="Fill" VerticalOptions="Center" />
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>