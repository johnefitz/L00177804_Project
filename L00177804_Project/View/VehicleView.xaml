    <AbsoluteLayout>
        <!--  Content  -->
        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
            <Grid>
                <!--  CollectionView content  -->
                <CollectionView ItemsSource="{Binding Vehicles}" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Vehicle">
                            <Grid Padding="10">
                                <!--  Vehicle item UI  -->
                                <Frame
                                    Margin="20"
                                    Padding="0"
                                    BackgroundColor="Gainsboro"
                                    HeightRequest="165">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>
                                        <Label
                                            Grid.Row="0"
                                            FontSize="Header"
                                            HorizontalOptions="Center"
                                            Text="{Binding Name}"
                                            VerticalOptions="CenterAndExpand" />
                                        <Label
                                            Grid.Row="1"
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            HorizontalOptions="Center"
                                            Text="{Binding Odometer}"
                                            VerticalOptions="CenterAndExpand" />
                                        <Label
                                            Grid.Row="2"
                                            FontAttributes="Bold"
                                            HorizontalOptions="Center"
                                            Text="{Binding Make}"
                                            VerticalOptions="CenterAndExpand" />
                                    </Grid>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </ScrollView>

        <!--  Floating Button  -->
        <Button
            AbsoluteLayout.LayoutBounds="1,1,100,90"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="DarkGreen"
            Command="{Binding GoToAddVehicleCommand}"
            CornerRadius="30"
            FontSize="Large"
            HeightRequest="60"
            Text="+"
            TextColor="GhostWhite"
            WidthRequest="60" />
    </AbsoluteLayout>
</ContentPage>