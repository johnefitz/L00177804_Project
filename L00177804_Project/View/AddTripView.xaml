<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="L00177804_Project.View.AddTripView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:L00177804_Project.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodel="clr-namespace:L00177804_Project.ViewModel"
    Title="Add Trip"
    x:DataType="viewmodel:AddTripViewModel">


    <ContentPage.Resources>
        <Style x:Key="InvalidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="Red" />
        </Style>
        <Style x:Key="ValidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="Green" />
        </Style>
    </ContentPage.Resources>


    <ScrollView>
        <!--  *,* makes coloumns as big as needed  -->
        <Grid>
            <StackLayout>
                <Frame
                    Margin="20"
                    Padding="20"
                    BackgroundColor="LightGray">
                    <Grid>
                        <VerticalStackLayout Padding="20" BackgroundColor="LightGray">
                            <Entry
                                Margin="0,0,0,0"
                                FontSize="Body"
                                Placeholder="Name"
                                PlaceholderColor="DarkGray"
                                Text="{Binding TripName}"
                                TextColor="Black" />
                            <Entry
                                FontSize="Body"
                                Placeholder="Odmeter"
                                PlaceholderColor="DarkGray"
                                Text="{Binding OdemeterStart}"
                                TextColor="Black" />

                            <Entry
                                Margin="0,0,0,0"
                                FontSize="Body"
                                Placeholder="Name"
                                PlaceholderColor="DarkGray"
                                Text="{Binding OdemeterEnd}"
                                TextColor="Black" />
                            <Entry
                                FontSize="Body"
                                Placeholder="Odmeter"
                                PlaceholderColor="DarkGray"
                                Text="{Binding TripCost}"
                                TextColor="Black" />

                            <Entry
                                Margin="0,0,0,0"
                                FontSize="Body"
                                Placeholder="Name"
                                PlaceholderColor="DarkGray"
                                Text="{Binding TripDistance}"
                                TextColor="Black" />
                            <Entry
                                FontSize="Body"
                                Placeholder="Odmeter"
                                PlaceholderColor="DarkGray"
                                Text="{Binding TripNotes}"
                                TextColor="Black" />
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <StackLayout
                    Margin="0,0,0,20"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="End">
                    <Button
                        BackgroundColor="Black"
                        Command="{Binding AddTripCommand}"
                        Text="Save Vehicle"
                        WidthRequest="200" />
                </StackLayout>

                <ActivityIndicator HorizontalOptions="Fill" VerticalOptions="Center" />
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>