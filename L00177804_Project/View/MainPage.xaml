<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="L00177804_Project.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:L00177804_Project.Models"
    xmlns:viewmodel="clr-namespace:L00177804_Project.ViewModel"
    x:DataType="viewmodel:MainPageViewModel">


    <StackLayout Margin="10">
        <Button
            Margin="0,0,0,20"
            Command="{Binding GetDirectionCommand}"
            Text="Get directions using Maps"
            TextColor="Black" />
        <!--<Button
            Margin="0,0,0,10"
            Command="{Binding StartTrackingCommand}"
            Text="Start Tracking"
            TextColor="Black" />-->
        <!--<RadioButton
            Margin="0,0,0,10"
            CheckedChanged="{Binding StartTrackingCommand}"
            Content="Start Tracking"
            IsChecked="{Binding IsTracking, Mode=TwoWay}"
            TextColor="Black" />-->

        <Frame
            Margin="10"
            BackgroundColor="Gainsboro"
            BorderColor="Gray"
            CornerRadius="5"
            HasShadow="True"
            HeightRequest="140">
            <StackLayout>
                <!--Bind ItemsSource and SelectedItem to ViewModel properties-->
                <Picker
                    Grid.Row="1"
                    Grid.Column="1"
                    ItemsSource="{Binding VehiclesCollection}"
                    SelectedItem="{Binding SelectVehicle}"/>

                <!--Display selected vehicle in front view-->
                <StackLayout>
                    <!--Bind Label's Text property to SelectedVehicle properties-->
                    <Label Text="{Binding SelectVehicle.Make}" />
                    <Label Text="{Binding SelectVehicle.Odometer, StringFormat='{0} km'}" />
                    <!--Add additional properties as needed-->
                </StackLayout>
            </StackLayout>
        </Frame>





        <Frame
            Margin="10"
            BackgroundColor="Gainsboro"
            BorderColor="Gray"
            CornerRadius="5"
            HasShadow="True"
            HeightRequest="140">

            <StackLayout>
                <!--  Title  -->
                <Label
                    Margin="10,0,0,0"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Text="Fuel Stations Nearby" />

                <CollectionView ItemsSource="{Binding Item}" SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:NearBy">
                            <StackLayout Orientation="Horizontal" Spacing="20">
                                <Image
                                    Aspect="AspectFill"
                                    HeightRequest="10"
                                    Source="{Binding Icon}"
                                    WidthRequest="10" />

                                <StackLayout Padding="20">
                                    <Label
                                        FontSize="Header"
                                        Text="{Binding Name}"
                                        VerticalOptions="CenterAndExpand" />

                                    <Label
                                        FontAttributes="Bold"
                                        Text="{Binding Rating, StringFormat='Rating: {0}'}"
                                        VerticalOptions="CenterAndExpand" />

                                    <Label
                                        Margin="0,0,0,0"
                                        FontAttributes="Bold"
                                        Text="{Binding Vicinity}"
                                        VerticalOptions="CenterAndExpand" />

                                </StackLayout>
                            </StackLayout>




                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </Frame>

    </StackLayout>
</ContentPage>
